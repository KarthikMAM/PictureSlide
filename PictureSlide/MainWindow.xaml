        <Image Source="Resources\close-P.png" RenderOptions.BitmapScalingMode="HighQuality" MouseLeftButtonDown="Image_MouseLeftButtonDown" MouseEnter="Buttons_MouseEnter" MouseLeave="Buttons_MouseLeave" x:Name="Close" Margin="355,10,84,231" Cursor="Hand"/>
